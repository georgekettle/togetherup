<%= render 'components/page_navbar', title: @goal.name.upcase, back_link: goals_path do %>
	<%= link_to '+ Log activity', new_goal_log_path(@goal), class:'py-1 px-4 border-2 border-black bg-jonquil font-display text-xl hover:scale-105 transform duration-200 ease-out transition-transform hidden sm:inline' %>
<% end %>

<div id="chart" class="w-full aspect-h-1 aspect-w-2 border-2 border-black bg-white">
    <div data-controller="chart" class="w-full h-56"></div>
</div>

<div class="mt-8">
	<%= render 'timeline', goal: @goal %>
</div>

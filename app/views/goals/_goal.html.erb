<% klass ||= "" %>

<%= link_to goal_path(goal), class: "w-full rounded-lg border-2 border-black flex items-end bg-center bg-no-repeat bg-cover bg-red-200 h-32 bg-white aspect-w-2 aspect-h-1 hover:-translate-x-0.5 hover:-translate-y-0.5 duration-200 ease-out transition-all hover:shadow-xl #{klass}" do %>
	  <div class="flex items-end justify-between w-full p-4">
	    <div class="pr-4">
	      <h4 class="font-bold text-xl leading-tight"><%= goal.name.capitalize %></h4>
	    </div>
	    <div class="h-10 w-10 rounded-full bg-pink text-black flex items-center justify-center flex-shrink-0 border-2 border-black ml-1 transform transition-transform duration-300 ease-in-out hover:scale-110 cursor-pointer">
	      <%= render "icons/arrow_right" %>
	    </div>
	  </div>
<% end %>
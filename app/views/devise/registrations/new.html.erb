<h2>Sign up</h2>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false } do |f| %>
  <%= f.input :username %>
  <%= f.input :email, autocomplete: "email" %>
  <%= f.input :password, autocomplete: "new-password" %>
  <%= f.submit "Sign up", class:'bg-black text-white px-6 py-4 text-center cursor-pointer inline-block uppercase w-full flex items-center justify-center font-medium mt-4' %>
<% end %>

<%= render "devise/shared/links" %>
